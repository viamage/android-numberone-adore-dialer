<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for individual contact entries in a list -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:background="#FFFFFF" >

<RelativeLayout android:id="@+id/body"
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content" >
    <ImageView
        android:id="@+id/contact_entry_icon"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"      
        android:padding="3dp" />
    <TextView
        android:id="@+id/contact_entry_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#696969"
        android:layout_alignTop="@+id/contact_entry_icon"
        android:layout_margin="15dp"
       
       
        android:layout_toRightOf="@+id/contact_entry_icon"
        android:textSize="18sp"
       />


    <!-- Subtitle contains author and date -->

    <TextView
        android:id="@+id/contact_entry_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignLeft="@id/contact_entry_title"
        android:layout_below="@id/contact_entry_title"
        android:textSize="14sp" />

</RelativeLayout>
 <View
        android:id="@+id/call_log_divider"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/body"
        android:layout_marginLeft="@dimen/call_log_outer_margin"
        android:layout_marginRight="@dimen/call_log_outer_margin"
        android:background="#55ffffff" />
</RelativeLayout>
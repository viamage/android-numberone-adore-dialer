<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/account_layout"
    android:layout_width="fill_parent"
  
      android:background="@drawable/dev"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="255dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            
      android:background="@drawable/logo11"
             />

        <TextView 
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dip"
            android:text=""      
            android:textStyle="bold"
            android:textColor="#fff"    
            android:paddingLeft="60dp"
           
             />
        
         <TextView
             android:id="@+id/status1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
             android:layout_marginTop="3dp"
             android:text="Please remove first zero from your phone number and check the password"
             android:textColor="#fff"
             android:visibility="gone"
             android:textStyle="bold" />

        <EditText
            android:id="@+id/acc_sip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:autoText="false"
            android:hint="@string/hint_sip"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#959595"
            android:visibility="gone" />

        <EditText
            android:id="@+id/acc_proxy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autoText="false"
            android:hint="@string/hint_proxy"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#959595"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView1"
      
          android:layout_width="37dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:onClick="onClick"
      android:background="@drawable/india"
             />
 <RelativeLayout android:id="@+id/relativeLayout1" 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content">
        

        <EditText
            android:id="@+id/acc_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:autoText="false"
            android:hint="Your Phone Number"
            android:paddingLeft="5dp"
            android:lines="1"
            android:maxLength="17"
             android:layout_marginLeft="85dp"
                 android:layout_marginRight="35dp"
            android:maxLines="1"
            android:background="@drawable/loginbar"
          android:textStyle="bold"
            android:singleLine="true"
              android:textColor="#fff"    
           android:textColorHint="#fff"
            android:textCursorDrawable="@drawable/cursor"
            /> 

        <Button
            android:id="@+id/acc_signup"
            android:layout_width="fill_parent"
             android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="1dp"
            android:layout_weight="0.24"
            android:background="@drawable/login_img"
            android:onClick="onClick"
            android:text="Request Password"
            android:textSize="25sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/acc_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/textView1"
            android:layout_marginRight="35dp"
            android:layout_marginTop="85dp"
            android:autoText="false"
            android:background="@drawable/loginbar"
            android:hint="Password"
            android:lines="1"
            android:maxLength="15"
            android:maxLines="1"
            android:textStyle="bold"
            
            android:paddingLeft="70dp"
            android:password="true"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textCursorDrawable="@drawable/cursor" />

        <EditText
            android:id="@+id/textView1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/acc_user"
             android:layout_marginLeft="20dp"
            android:layout_alignBottom="@+id/acc_user"
            android:layout_toRightOf="@+id/acc_signup"
            android:background="@drawable/loginbar"
            android:textStyle="bold"
              android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
            android:text="" />

       </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/acc_login"
                android:layout_width="35dp"
             android:layout_height="35dp"
                android:layout_marginLeft="145dp"
                android:layout_marginRight="145dp"
                android:layout_marginTop="7dp"
                android:layout_weight="0.24"
    
                android:background="@drawable/next1"
                android:onClick="onClick"
               
                android:textSize="23sp"
                 />

            <Button 
                android:id="@+id/acc_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                   android:layout_marginLeft="28dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.24"
                android:text="Clear"
                android:background="@drawable/clear"
                android:onClick="onClick"
             android:visibility="gone"
              
                android:textSize="23sp"
               />

           <EditText
                android:id="@+id/acc_Mobile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0.24"
                android:autoText="false"
                android:ems="10"               
                  android:background="@drawable/bar"         
                     android:hint="Enter Mobile Number"    
                android:inputType="phone"
                android:lines="1"
                android:paddingLeft="60dp"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="15"
                android:textColor="#026D95"
                android:visibility="gone"
                android:textColorHint="#959595"
                android:textSize="18dip"
                  android:textCursorDrawable="@drawable/cursor" >
               
                <requestFocus />
            </EditText>

            

                
               
        </LinearLayout>
        
        
         <TextView 
            android:id="@+id/term"  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#33B5E5"
             style="@style/formWhiteBlock"
             android:visibility="gone"
             android:layout_marginTop="30dip"          
            android:textAppearance="?android:attr/textAppearanceSmall"
          
             />
         
           <CheckBox
              android:id="@+id/checkBox1"
              android:layout_width="wrap_content"
              android:layout_height="39dp"
              android:text="Accetto Termini e Condizioni." 
                 android:textColor="#000"    
                 android:checked="true"  
                 android:visibility="gone"
                android:layout_below="@id/term" 
                
             
                
              />
      

        <LinearLayout
            android:id="@+id/REGISTER_BUTTON_LAY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
           
            android:orientation="horizontal" >

            <Button
                android:id="@+id/acc_Register"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                 android:layout_marginRight="120dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.22"
                android:background="@drawable/login_img"
                android:onClick="onClick"
                 android:visibility="gone"
                android:text="Sign up"
                android:textSize="25sp" />

            <Button
                android:id="@+id/acc_Mobclear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dip"
                android:layout_marginTop="15dp"
                android:layout_weight="0.24"
                 android:background="@drawable/login_img"
                android:text="Clear"
                android:onClick="onClick" 
              android:visibility="gone"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/forget_button"
                 android:layout_width="35dp"
               android:layout_height="35dp"
              android:layout_marginLeft="145dp"
                android:layout_marginRight="145dp"
                android:layout_weight="0.22"     
                android:layout_marginBottom="3dp" 
                  android:background="@drawable/signup1"
                 android:onClick="onClick"
                 />

        </LinearLayout> 
         
               
        
           <Button
                android:id="@+id/forgot"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="90dp"
                android:layout_weight="0.24"
                android:visibility="gone"
               
                android:background="@drawable/clear_img"
                android:onClick="onClick" />

           <Button
               android:id="@+id/Login_page"
               android:layout_width="240dp"
               android:layout_height="50dp"
               android:layout_marginLeft="65dp"
               android:layout_marginRight="20dp"
               android:layout_marginTop="130dp"
               android:background="@drawable/clear2"
               android:onClick="onClick"
                 android:visibility="gone"
               android:text="Already have a PIN"
               android:textSize="23sp" />

         <Button
                android:id="@+id/Register_page"
                 android:layout_width="250dp"
               android:layout_height="50dp"
                android:layout_marginLeft="55dp"
                 android:layout_marginRight="25dp"
                android:layout_marginTop="40dp"
                android:layout_weight="0.24"
               android:text="Register New User"
                android:background="@drawable/login_img"
                android:onClick="onClick"
               
                android:visibility="gone"
                android:textSize="23sp"
               />
    </LinearLayout>

</ScrollView>
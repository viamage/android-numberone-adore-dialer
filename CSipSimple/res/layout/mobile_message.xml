<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/dialpad_backgroundd"
     >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           
             >
            
            
             <ImageView
                android:id="@+id/logo"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/adore22" />
            
            <RelativeLayout
                android:id="@+id/signupPage1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_marginBottom="10dp" >

            <ImageView
                android:id="@+id/COUNTRY_FLAG"
                 android:layout_width="45dp"
                 android:layout_height="55dp"
                 android:visibility="gone"
                android:layout_centerVertical="true"
                 />

            <TextView
                android:id="@+id/country"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:visibility="gone"
                android:layout_alignParentTop="true"
               
                android:ems="10"
                android:background="#fff"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/cancel_bt"
                style="@style/ButtonBarButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back"
                android:onClick="onclick"
                android:textColor="#fff" />

            <Button
                android:id="@+id/save_bt"
                style="@style/ButtonBarButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_weight="0.5"
                 android:layout_marginRight="10dp"
                android:background="@drawable/send"
                android:onClick="onclick"
                android:textColor="#fff" />

        </RelativeLayout>
             
             <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cw_mob"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:layout_alignParentLeft="true"
                android:text="Message:" 
                android:textColor="#026D95"
                
                android:layout_marginLeft="10dp"
                android:textSize="20sp"/> 
            
          <EditText
                android:id="@+id/cw_job"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp"
                android:layout_marginTop="6dp" 
                android:cacheColorHint="#00000000"
                android:gravity="top"
                
                android:imeOptions="actionSend|flagNoEnterAction"
                android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:maxLines="12"
                android:singleLine="true"
                android:textColor="#000000"
                android:background="@drawable/smsbar"
                android:textCursorDrawable="@null" />

            <EditText
                android:id="@+id/cw_mob"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv2"
                android:layout_marginTop="10dp"
                android:textColorHint="#026D95"
                android:ems="10"
                android:background="@drawable/bar"
                 android:layout_marginLeft="10dp"
                android:layout_marginRight="70dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:hint="Enter Mobile Number"
                android:inputType="phone"
                android:singleLine="true"
                android:textColor="#000000" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/cw_mob"
                android:layout_below="@+id/signupPage1"
                android:layout_marginTop="46dp"
                android:text="Mobile Number:"
                android:textColor="#026D95"
                android:textSize="20sp" />

         <!--    <Button
                android:id="@+id/contacts"
                android:layout_width="65dp"
                android:layout_height="47dp"
                android:layout_alignBaseline="@+id/cw_mob"
                android:layout_alignBottom="@+id/cw_mob"
                android:layout_alignParentRight="true"
                android:background="@drawable/cnc"
                android:text=""
                android:visibility="gone"
                android:textColor="#fff"
                android:textSize="16sp" /> -->

              <Button
                  android:id="@+id/contacts"
                  android:layout_width="65dp"
                  android:layout_height="47dp"
                  android:layout_alignParentRight="true"
                  android:layout_alignTop="@+id/cw_mob"
                  android:background="@drawable/cnc"
                  android:textColor="#fff"
                  android:textSize="16sp" />

              <EditText
                  android:id="@+id/textView1"
                  android:layout_width="75dp"
                  android:paddingLeft="15dp"
                  android:layout_height="wrap_content"
                  android:layout_alignBaseline="@+id/button1"
                  android:layout_alignBottom="@+id/button1"
                  android:layout_alignLeft="@+id/tv2"
                  android:editable="false"
                  android:enabled="false"
                    android:ems="10"
                android:background="@drawable/barrrr"
                  android:text="" />

              <Button
                  android:id="@+id/button1"
                  style="?android:attr/buttonStyleSmall"
                  android:layout_width="215dp"
                  android:background="@drawable/login"
                  android:layout_height="wrap_content"
                  android:layout_alignRight="@+id/cw_job"
                  android:layout_below="@+id/signupPage1"
                  android:text="Select Country"
                  android:textSize="18sp" />
            
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/validation_bar"
        style="@style/ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancel_bt"
            style="@style/ButtonBarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_weight="0.5"
            android:onClick="onclick"
            android:background="@drawable/login_img"
            android:text="@string/cancel"
            android:textColor="#fff" />

        <Button
            android:id="@+id/save_bt"
            style="@style/ButtonBarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_weight="0.5"
            android:onClick="onclick"
            android:text="Send"
            android:background="@drawable/login_img"
            android:textColor="#fff" />

    </LinearLayout>

</RelativeLayout>